{
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/rtablada/packagist-api"
        }
    ],

    "name": "rtablada/package-installer",
    "description": "An easy to use package installer for Laravel 4",
    "keywords": [
        "laravel"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Ryan Tablada",
            "email": "ryan.tablada@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "illuminate/support": "4.0.x",
        "illuminate/console": "4.0.x",
        "illuminate/filesystem": "4.0.x",
        "illuminate/config": "4.0.x",
        "knplabs/packagist-api": "0.1.*@dev"
    },
    "require-dev": {
        "mockery/mockery": "0.8.*"
    },
    "autoload": {
        "psr-0": {
            "Rtablada\\PackageInstaller": "src/"
        }
    },
    "minimum-stability": "dev"
}
